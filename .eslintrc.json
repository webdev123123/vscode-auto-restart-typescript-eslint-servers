{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "warn",
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": [
      "warn",
      "never"
    ],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "indent": [
      "warn",
      2
    ]
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts"
  ]
}